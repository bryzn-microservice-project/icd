{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PaymentResponse",
  "type": "object",
  "properties": {
    "topicName" : { "type": "string" },
    "correlatorId" : { "type": "integer" },
    "paymentAmount": {
      "type": "number",
      "minimum": 0,
      "multipleOf": 0.01
    },
    "email": { "type": "string", "format": "email" },
    "creditCard": {
      "type": "string",
      "pattern": "^[0-9]{13,19}$",
      "description": "Credit card number without spaces or dashes"
    },
    "status": {
      "type": "string",
      "enum": [
        "SUCCESSFUL",
        "FAILED"
      ]
    }
  },
  "required": ["topicName", "correlatorId", "paymentAmount", "email", "creditCard", "status"]
}