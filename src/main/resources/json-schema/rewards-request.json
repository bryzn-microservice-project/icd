{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RewardsRequest",
  "type": "object",
  "properties": {
    "topicName": { "type": "string" },
    "name": { "type": "string" },
    "email": { "type": "string", "format": "email" },
    "username": { "type": "string" },
    "rewardPoints": { "type": "integer" },
    "application" : {
      "type": "string",
      "enum": ["REWARD_POINTS_ADDED", "REWARD_POINTS_REDEEMED"]
    }
  },
  "required": ["topicName"],
  "description": "At least a name, email, or username must be provided to be searched",
  "anyOf": [
    { "required": ["name"] },
    { "required": ["email"] },
    { "required": ["username"] }
  ]
}