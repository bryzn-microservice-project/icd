{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MovieTicketRequest",
  "type": "object",
  "properties": {
    "topicName" : { "type": "string" },
    "correlatorId" : { "type": "integer" },
    "movie": {
      "$ref": "movie.json"
    },
    "seatNumber": {
      "type": "string",
      "pattern": "^[A-Z]\\d{1,3}$",
      "description": "this will be a seat number with some number ex. A12"
    },
    "price": {
      "type": "number",
      "minimum": 3,
      "multipleOf": 0.01,
      "description": "we do not believe in free"
    },
    "payment": {
      "$ref": "payment-request.json"
    }
  },
  "required": ["topicName", "correlatorId", "movie", "seatNumber", "price", "payment"]
}