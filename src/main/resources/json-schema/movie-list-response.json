{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MovieListResponse",
  "type": "object",
  "properties": {
    "topicName": { "type": "string" },
    "correlatorId": { "type": "integer" },
    "movies": {
      "type": "array",
      "items": { "$ref": "movie.json" },
      "minItems": 0
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["topicName", "correlatorId", "movies", "timestamp"]
}