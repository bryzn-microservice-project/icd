{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RewardsNotification",
  "type": "object",
  "properties": {
    "topicName" : { "type": "string" },
    "correlatorId" : { "type": "integer" },
    "email": { "type": "string", "format": "email" },
    "username": { "type": "string" },
    "rewardPoints": { "type": "integer" },
    "application" : {
      "type": "string",
      "enum": ["SUCCESS", "FAILED"]
    },
    "timeStamp": {
      "type": "string",
      "format": "date-time"
    }
    },
  "required": ["topicName", "correlatorId", "email", "username", "rewardPoints", "application", "timeStamp"]
}