{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SeatResponse",
  "type": "object",
  "properties": {
    "topicName" : { "type": "string" },
    "correlatorId" : { "type": "integer" },
    "movieName": {
      "type": "string"
    },
    "showtime": {
      "type": "string",
      "format": "date-time"
    },
    "seatNumber": {
      "type": "string",
      "description": "this will be a seat number with some number ex. A12"
    },
    "status": {
      "type": "string",
      "enum": [
        "BOOKED",
        "CANCELLED",
        "FAILED",
        "HOLDING"
      ]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["topicName", "correlatorId", "showtime", "seatNumber", "status", "timestamp"]
}