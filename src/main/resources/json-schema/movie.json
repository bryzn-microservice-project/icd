{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Movie",
  "type": "object",
  "properties": {
    "movieName": {
      "type": "string",
      "description": "name of the movie the customer is intended to watch"
    },
    "showtime": {
      "type": "string",
      "format": "date-time"
    },
    "genre": {
      "type": "string",
      "enum": ["ACTION", "COMEDY", "DRAMA", "HORROR", "SCIFI", "ROMANCE", "THRILLER"],
      "description": "Filter movies by genre"
    }
  },
  "required": ["movieName", "showtime"]
}