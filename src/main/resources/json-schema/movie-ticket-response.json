{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MovieTicketResponse",
  "type": "object",
  "properties": {
    "topicName" : { "type": "string" },
    "ticketId" : { "type": "integer" },
    "movieName": {
      "type": "string",
      "description": "name of the movie the customer is intended to watch"
    },
    "showtime": {
      "type": "string",
      "format": "date-time"
    },
    "seatNumber": {
      "type": "string",
      "description": "this will be a seat number with some number ex. A12"
    }
  },
  "required": ["topicName", "ticketId", "movieName", "showtime", "seatNumber"]
}