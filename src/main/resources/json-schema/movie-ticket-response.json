{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MovieTicketResponse",
  "type": "object",
  "properties": {
    "topicName": { "type": "string" },
    "correlatorId" : { "type": "integer" },
    "ticketId": { "type": "integer" },
    "movie": {
      "$ref": "movie.json"
    },
    "seatNumber": {
       "type": "string",
       "pattern": "^[A-Z]\\d{1,3}$"
    }
  },
  "required": ["topicName", "correlatorId", "ticketId", "movie", "seatNumber"]
}