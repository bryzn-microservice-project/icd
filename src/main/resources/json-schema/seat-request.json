{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SeatRequest",
  "type": "object",
  "properties": {
    "showtime": {
      "type": "string",
      "format": "date-time"
    },
    "seatNumber": {
      "type": "string",
      "description": "this will be a seat number with some number ex. A12"
    },
    "payment": {
      "$ref": "payment-request.json"
    }
  },
  "required": ["showtime", "seatNumber", "payment"]
}