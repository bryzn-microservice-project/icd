{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SeatRequest",
  "type": "object",
  "properties": {
    "topicName" : { "type": "string" },
    "correlatorId" : { "type": "integer" },
    "movieName": {
      "type": "string"
    },
    "showtime": {
      "type": "string",
      "format": "date-time"
    },
    "seatNumber": {
      "type": "string",
      "pattern": "^[A-Z]\\d{1,3}$",
      "description": "this will be a seat number with some number ex. A12"
    }
  },
  "required": ["topicName", "correlatorId", "movieName", "showtime", "seatNumber"]
}